<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Customer Management - MODMAN</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Arial', sans-serif;
      background: #f7f7f9;
      color: #333;
      display: flex;
      min-height: 100vh;
    }
    .layout-container {
      display: flex;
      width: 100%;
      min-height: 100vh;
    }
    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    .content-wrapper {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }
    .breadcrumb-bar {
      color: #555;
      margin-bottom: 10px;
      font-size: 15px;
    }
    .breadcrumb-bar a { color: #555; text-decoration: none; }
    .title-custom {
      font-size: 2.1rem;
      font-weight: 700;
      margin: 12px 0 24px 0;
      letter-spacing: 0; line-height: 1.15;
      color: #111;
    }
    .list-header-bar { display: flex; justify-content: space-between; align-items: start; flex-wrap: wrap; margin-bottom: 22px; gap: 12px 0; }
    .search-box-group { position: relative; width: 267px; max-width: 97vw; }
    .search-box-group input[type="text"] { border-radius: 13px; background: #fff; border: 1.5px solid #e3e4e7; font-size: 15px; height: 41px; padding-right: 80px; padding-left: 18px;}
    .search-actions {
      position: absolute;
      right: 8px;
      top: 50%;
      transform: translateY(-50%);
      display: none;
      gap: 6px;
      align-items: center;
    }
    .search-actions.show {
      display: flex;
    }
    .search-btn, .search-clear-btn {
      border: none;
      background: #454678;
      color: #fff;
      border-radius: 8px;
      width: 32px;
      height: 32px;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 13px;
      transition: background 0.2s;
    }
    .search-btn:hover {
      background: #363554;
    }
    .search-clear-btn {
      background: #dc3545;
    }
    .search-clear-btn:hover {
      background: #c82333;
    }
    .filter-dropdown { position: relative; }
    .filter-btn { background: #fff; box-shadow: 0 2px 10px 0 #0001; border: 1.5px solid #e3e4e7; border-radius: 13px; color: #454678; font-size: 15px; padding: 8.5px 23px 8.5px 34px; font-weight: 600; cursor: pointer; outline: none; transition: border 0.13s, color 0.13s, background 0.13s; position: relative; min-width: 109px; height: 41px; display: flex; align-items: center; gap: 4px;}
    .filter-btn i { position: absolute; left: 14px; top: 50%; transform: translateY(-50%); font-size: 15px;}
    .filter-pop { position: absolute; right: 2px; top: 50px; min-width: 153px; background: #fff; box-shadow: 0 6px 40px 0 #3c405833; border-radius: 12px; z-index: 12; display: none; flex-direction: column; padding: 7px 12px;}
    .filter-pop.show { display: flex; }
    .filter-pop .btn {border-radius: 8px; font-weight: 500; margin-bottom: 6px; font-size: 15px; border: none; padding: 6.5px 0; background: #f6f4f6; color: #4e4e6d; transition: background 0.1s, color 0.1s;}
    .filter-pop .btn.active, .filter-pop .btn:focus, .filter-pop .btn:hover {background: #e6e5ff;color: #2261c6;}
    .table-responsive {padding: 0 8px 12px 8px;}
    .table-header, .customer-row {display: grid; grid-template-columns: 2.3fr 1.3fr .8fr 1.2fr 1fr 1.3fr .9fr; align-items: center; gap: 0.5rem; margin: 0;}
    .table-header {background: #23272e; color: #fff; font-weight: 600; padding: 13px 12px; font-size: 17px; border-radius: 12px 12px 0 0; margin-bottom: 0;}
    .customer-row {background: #fff; padding: 11px 10px; font-size: 15px; border-bottom: 1.5px solid #f1f1f4; margin: 0; transition: background 0.13s;}
    .customer-row:hover { background: #fafbfc; }
    .customer-info { display: flex; gap: 12px; align-items: center; }
    .customer-avatar { width: 38px; height: 38px; border-radius: 50%; background: #ebebeb; color: #838383; display: flex; justify-content: center; align-items: center; font-weight: 700; font-size: 17px; }
    .customer-details h4 { font-size: 15px; font-weight: 700; margin: 0 0 2px 0; }
    .customer-details p { margin: 0; font-size: 13px; color: #9b9b9b; font-weight: 500;}
    .status-badge { padding: 4.5px 17px; border-radius: 13px; font-size: 13px; font-weight: 600; min-width: 67px;}
    .status-active { background: #dafbe3; color: #248a3d;}
    .status-blocked { background: #fee7e7; color: #d03b3b;}
    .slide-toggle { position: relative; display: inline-block; width: 71px; height: 25px; background: none; border: none; outline: none; margin: 0; padding: 0; cursor: pointer;}
    .slide-toggle .toggle-bg { width: 100%; height: 100%; border-radius: 99px; position: absolute; top: 0; left: 0; transition: background 0.13s; background: #e3e3e3;}
    .slide-toggle.active .toggle-bg { background: #e24e4e;}
    .slide-toggle .toggle-knob { position: absolute; top:2px; left: 5px; width: 18px; height: 18px; border-radius: 50%; background: #fff; box-shadow: 0 1.5px 5px #aaa2; transition: left 0.18s, background 0.18s; z-index: 10;}
    .slide-toggle.active .toggle-knob { left: 44px; background: #e24e4e;}
    .toggle-label-on, .toggle-label-off { position: absolute; top: 5px; right: 11px; font-weight: 700; font-size: 12px; pointer-events: none; transition: color 0.12s, opacity 0.13s; }
    .toggle-label-on { opacity: 1; color: #232323;}
    .toggle-label-off { opacity: 0; color: #fff; }
    .slide-toggle.active .toggle-label-on { opacity: 0; }
    .slide-toggle.active .toggle-label-off { opacity: 1; }
    .action-icons { display: flex; gap: 8px; justify-content: center; align-items: center; }
    .icon-btn { border: none; background: none; cursor: pointer; font-size: 18px; color: #575a7b; padding: 2px; line-height: 1; }
    .icon-btn.view:hover { color: #0ab492;}
    @media (max-width: 900px) {
      .layout-container {
        flex-direction: column;
      }
      .content-wrapper { padding: 10px; }
      .table-header, .customer-row { font-size: 12px;}
    }
    @media (max-width: 768px) {
      .content-wrapper { padding: 10px;}
      .table-header, .customer-row { font-size: 12px;}
      .list-header-bar { flex-direction: column; align-items: flex-start; }
    }
    @media (max-width: 530px) {
      .table-header, .customer-row { display: block; }
      .customer-row > div, .table-header > div { display: block; padding: 2px 0;}
      .content-wrapper, .breadcrumb-bar, .title-custom { padding-right: 4vw; padding-left: 4vw;}
      .search-box-group { width: 100%; max-width: 100vw;}
    }
  </style>
</head>
<body>
  <div class="layout-container">
    <%- include('../partials/admin/sidebar') %>
    <div class="main-content">
      <%- include('../partials/admin/header') %>
      <div class="content-wrapper">
        <div class="breadcrumb-bar">
          <a href="/admin/dashboard">Dashboard</a> &gt; <span>CUSTOMERS</span>
        </div>
        <div class="title-custom">CUSTOMER LIST</div>
        <div class="list-header-bar flex-wrap align-items-center">
          <div class="search-box-group">
            <input type="text" class="form-control shadow-none" placeholder="Search customer..." value="<%= search || '' %>" id="customerSearchInput" autocomplete="off">
            <div class="search-actions" id="searchActions">
              <button type="button" class="search-btn" id="searchBtn" title="Search">
                <i class="fas fa-search"></i>
              </button>
              <button type="button" class="search-clear-btn" id="clearSearchBtn" title="Clear">
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
          <div class="filter-dropdown ms-2">
            <button class="filter-btn" id="filterToggleBtn" type="button">
              <i class="fas fa-filter"></i> Filters
            </button>
            <div class="filter-pop" id="filterPop">
              <button class="btn<%= (!status || status==='all') ? ' active' : '' %>" onclick="window.location.href='?status=all'">
                <i class="fas fa-list-ul me-1"></i> All
              </button>
              <button class="btn<%= (status==='active') ? ' active' : '' %>" onclick="window.location.href='?status=active'">
                <i class="fas fa-check-circle me-1"></i> Active
              </button>
              <button class="btn<%= (status==='blocked') ? ' active' : '' %>" onclick="window.location.href='?status=blocked'">
                <i class="fas fa-ban me-1"></i> Blocked
              </button>
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <div class="table-header mb-0">
            <div>Customer Name</div>
            <div>Phone</div>
            <div>Orders</div>
            <div>Balance</div>
            <div>Status</div>
            <div>Block/Unblock</div>
            <div>Action</div>
          </div>
          <% if (data && data.length > 0) { %>
            <% data.forEach(customer => { %>
              <div class="customer-row">
                <div class="customer-info">
                  <div class="customer-avatar"><%= customer.fullName ? customer.fullName.charAt(0).toUpperCase() : 'U' %></div>
                  <div class="customer-details">
                    <h4><%= customer.fullName || 'N/A' %></h4>
                    <p><%= customer.email || 'N/A' %></p>
                  </div>
                </div>
                <div><%= customer.mobile || 'N/A' %></div>
                <div>42</div>
                <div>$350.00</div>
                <div>
                  <span class="status-badge <%= customer.isBlocked ? 'status-blocked' : 'status-active' %>">
                    <%= customer.isBlocked ? 'Blocked' : 'Active' %>
                  </span>
                </div>
                <div>
                  <button class="slide-toggle <%= customer.isBlocked ? 'active' : '' %>"
                    aria-label="Toggle Block"
                    onclick="toggleBlockButton(this, '<%= customer._id %>', <%= !!customer.isBlocked %>);">
                    <div class="toggle-bg"></div>
                    <div class="toggle-knob"></div>
                    <span class="toggle-label-on">BLOCK</span>
                    <span class="toggle-label-off">UNBLOCK</span>
                  </button>
                </div>
                <div class="action-icons">
                  <button class="icon-btn view"
                    onclick="window.location.href='/admin/customerDetails/<%= customer._id %>'"
                    title="View">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
            <% }) %>
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center py-3 px-3 bg-white mb-2" style="border-radius:0 0 12px 12px;">
              <div>
                Showing <%= (currentPage - 1) * perPage + 1 %> - <%= Math.min(currentPage * perPage, totalCustomers) %> from <%= totalCustomers %>
              </div>
              <nav>
                <ul class="pagination mb-0">
                  <% if (currentPage > 1) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= status ? '&status=' + status : '' %>">&lt;</a>
                    </li>
                  <% } %>
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= status ? '&status=' + status : '' %>"><%= i %></a>
                    </li>
                  <% } %>
                  <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= status ? '&status=' + status : '' %>">&gt;</a>
                    </li>
                  <% } %>
                </ul>
              </nav>
            </div>
          <% } else { %>
            <div style="padding: 40px; text-align: center; color: #999;">
              <i class="fas fa-users" style="font-size: 48px; margin-bottom: 16px; opacity: 0.4;"></i>
              <p>No customers found</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 <script>
const searchInput = document.getElementById('customerSearchInput');
const searchActions = document.getElementById('searchActions');
const searchBtn = document.getElementById('searchBtn');
const clearBtn = document.getElementById('clearSearchBtn');

function buildUrl(params = {}) {
  const url = new URL(window.location.origin + "/admin/customers");

  if (searchInput.value.trim()) {
    url.searchParams.set("search", searchInput.value.trim());
  }

  if ("<%= status %>" && "<%= status %>" !== "all") {
    url.searchParams.set("status", "<%= status %>");
  }

  Object.keys(params).forEach(key => {
    url.searchParams.set(key, params[key]);
  });

  return url.toString();
}

if (searchInput) {
  searchInput.addEventListener("input", () => {
    searchActions.classList.toggle("show", searchInput.value.trim() !== "");
  });

  searchInput.addEventListener("keypress", (e) => {
    if (e.key === "Enter" && searchInput.value.trim()) {
      window.location.href = buildUrl();
    }
  });

  searchBtn.addEventListener("click", () => {
    if (searchInput.value.trim()) {
      window.location.href = buildUrl();
    }
  });

  clearBtn.addEventListener("click", () => {
    searchInput.value = "";
    searchActions.classList.remove("show");
    window.location.href = buildUrl({ search: "", page: 1 });
  });

  if (searchInput.value.trim()) {
    searchActions.classList.add("show");
  }
}

const filterBtn = document.getElementById("filterToggleBtn");
const filterPop = document.getElementById("filterPop");

if (filterBtn && filterPop) {
  filterBtn.addEventListener("click", (e) => {
    filterPop.classList.toggle("show");
    e.stopPropagation();
  });

  document.body.addEventListener("click", () => filterPop.classList.remove("show"));
  filterPop.addEventListener("click", (e) => e.stopPropagation());
}

window.changeFilter = function(statusType) {
  window.location.href = buildUrl({ status: statusType });
};

function toggleBlockButton(btn, userId, isBlockedInitial) {
  btn.classList.toggle("active");
  let willBlock = !isBlockedInitial;
  let action = willBlock ? "block" : "unblock";

  Swal.fire({
    title: `Are you sure you want to ${action} this customer?`,
    icon: willBlock ? "warning" : "success",
    showCancelButton: true,
    confirmButtonText: `Yes, ${action}`,
    cancelButtonText: "Cancel"
  }).then((r) => {
    if (r.isConfirmed) {
      fetch(`/admin/${action}Customer?id=${userId}`)
        .then(res => res.json())
        .then(data => {
          Swal.fire(
            data.success ? "Success!" : "Error!",
            data.message,
            data.success ? "success" : "error"
          ).then(() => location.reload());
        });
    } else {
      btn.classList.toggle("active");
    }
  });
}
</script>

</body>
</html>