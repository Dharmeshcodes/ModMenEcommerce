<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Customer Management - MODMAN</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <style>
    html, body { background: #f7f7f9; margin: 0; height: 100%; }
    .main-header {
      position: fixed;
      top: 0; left: 0; right: 0;
      height: 60px;
      background: #fff;
      box-shadow: 0 2px 8px rgba(90,90,90,0.05);
      z-index: 2001;
      display: flex;
      align-items: center;
      width: 100vw;
    }
    .sidebar {
      position: fixed;
      top: 60px;
      left: 0; bottom: 0;
      width: 230px;
      background: #fff;
      border-right: 1px solid #ededed;
      z-index: 1030;
      min-height: calc(100vh - 60px);
      box-sizing: border-box;
    }
    .layout-container {
      display: flex;
      min-height: 100vh;
      background: #f7f7f9;
      margin-top: 60px;
    }
    .main-content {
      margin-left: 230px;
      min-width: 0;
      min-height: calc(100vh - 60px);
      background: #f7f7f9;
      display: flex;
      flex-direction: column;
      padding: 0;
    }
    .main-card {
      width: 100%;
      max-width: 1100px;
      margin: 8px auto 0 auto; /* Reduced gap here */
      padding: 0;
      background: #fff;
      border-radius: 13px;
      box-shadow: 0 4px 24px 0 rgba(60,60,60,0.08);
    }
    .breadcrumb-bar {
      font-size: 15px;
      color: #888;
      margin: 16px 18px 0 18px; /* Reduced left/right padding */
    }
    .breadcrumb-bar a { color: #888; text-decoration: none; }
    .title-custom {
      font-size: 28px; font-weight: 700;
      margin: 6px 0 8px 0;
      padding: 0 18px; /* Reduced left/right padding */
      letter-spacing: 0; line-height: 1.2;
    }
    .list-header-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
      padding: 0 18px; /* Reduced left/right padding */
      flex-wrap: wrap;
      gap: 6px 0;
    }
    .search-box-group { position: relative; width: 265px; max-width: 97vw; }
    .search-box-group input[type="text"] {
      border-radius: 7px;
      background: #f7f7f9;
      border: 1px solid #d6d6d8;
      font-size: 15px;
      height: 38px;
      padding-right: 30px;
    }
    .search-close-btn {
      position: absolute; right: 6px; top: 6px; border: none;
      background: none; font-size: 15px; color: #bbb; border-radius: 50%;
      width: 22px; height: 22px; cursor: pointer;
      display: flex; justify-content: center; align-items: center;
    }
    .search-close-btn:hover { background: #ececec; color: #ff6961;}
    .filter-group { display: flex; gap: 4px; }
    .filter-btn {
      background: #f7f7f9;
      border: 1px solid #d6d6d8;
      border-radius: 8px;
      color: #444;
      font-size: 15px;
      padding: 7px 17px 7px 27px;
      position: relative; font-weight: 500; cursor: pointer; outline: none;
      transition: 0.13s border, 0.13s color;
    }
    .filter-btn.active, .filter-btn:focus {
      border-color: #191919; color: #0b79d0; background: #eff7fd;
    }
    .filter-btn i {
      position: absolute; left: 10px; top: 10.5px; font-size: 12.7px;
    }
    .table-responsive {
      padding: 0 8px 12px 8px; /* Minimized side padding */
    }
    .table-header, .customer-row {
      display: grid;
      grid-template-columns: 2.3fr 1.3fr .8fr 1.2fr 1fr 1.3fr .9fr;
      align-items: center;
      gap: 0.5rem;
      margin: 0;
    }
    .table-header {
      background: #23272e;
      color: #fff;
      font-weight: 600;
      padding: 10px 10px 10px 10px; /* Tight padding */
      font-size: 16px;
      border-radius: 12px 12px 0 0;
      margin-bottom: 0;
    }
    .customer-row {
      background: #fff;
      padding: 9px 10px;
      font-size: 15px;
      border-bottom: 1.5px solid #f1f1f4;
      margin: 0;
      transition: background 0.13s;
    }
    .customer-row:hover { background: #fafbfc; }
    .customer-info { display: flex; gap: 12px; align-items: center; }
    .customer-avatar {
      width: 38px; height: 38px;
      border-radius: 50%; background: #ebebeb; color: #838383;
      display: flex; justify-content: center; align-items: center;
      font-weight: 700; font-size: 17px;
    }
    .customer-details h4 { font-size: 15px; font-weight: 700; margin: 0 0 2px 0; }
    .customer-details p { margin: 0; font-size: 13px; color: #9b9b9b; font-weight: 500;}
    .status-badge { padding: 4.5px 17px; border-radius: 13px; font-size: 13px; font-weight: 600; min-width: 67px;}
    .status-active { background: #dafbe3; color: #248a3d;}
    .status-blocked { background: #fee7e7; color: #d03b3b;}
    .slide-toggle {
      position: relative; display: inline-block; width: 71px; height: 25px;
      background: none; border: none; outline: none; margin: 0; padding: 0; cursor: pointer;
    }
    .slide-toggle .toggle-bg { width: 100%; height: 100%; border-radius: 99px; position: absolute; top: 0; left: 0; transition: background 0.13s; background: #e3e3e3;}
    .slide-toggle.active .toggle-bg { background: #e24e4e;}
    .slide-toggle .toggle-knob { position: absolute; top:2px; left: 5px; width: 18px; height: 18px; border-radius: 50%; background: #fff; box-shadow: 0 1.5px 5px #aaa2; transition: left 0.18s, background 0.18s; z-index: 10;}
    .slide-toggle.active .toggle-knob { left: 44px; background: #e24e4e;}
    .toggle-label-on, .toggle-label-off { position: absolute; top: 5px; right: 11px; font-weight: 700; font-size: 12px; pointer-events: none; transition: color 0.12s, opacity 0.13s; }
    .toggle-label-on { opacity: 1; color: #232323;}
    .toggle-label-off { opacity: 0; color: #fff; }
    .slide-toggle.active .toggle-label-on { opacity: 0; }
    .slide-toggle.active .toggle-label-off { opacity: 1; }
    .action-icons { display: flex; gap: 8px; justify-content: center; align-items: center; }
    .icon-btn { border: none; background: none; cursor: pointer; font-size: 18px; color: #575a7b; padding: 2px; line-height: 1; }
    .icon-btn.view:hover { color: #0ab492;}
    @media (max-width: 900px) {
      .main-card { padding: 0; border-radius: 0; margin-top: 12px;}
      .table-header, .customer-row, .breadcrumb-bar, .title-custom, .list-header-bar, .table-responsive { padding-left: 2px; padding-right: 2px;}
      .sidebar, .main-content { margin-left: 0; min-width: 0; }
    }
  </style>
</head>
<body>
  <%- include('../partials/admin/header') %>
  <div class="layout-container">
    <div class="sidebar">
      <%- include('../partials/admin/sidebar') %>
    </div>
    <div class="main-content">
      <div class="main-card">
        <div class="breadcrumb-bar">
          <a href="/admin/dashboard">Dashboard</a> &gt; <span>CUSTOMERS</span>
        </div>
        <div class="title-custom">CUSTOMER LIST</div>
        <div class="list-header-bar">
          <div class="search-box-group">
            <input type="text" class="form-control shadow-none" placeholder="Search customer..." value="<%= search || '' %>" id="customerSearchInput" autocomplete="off">
            <button type="button" class="search-close-btn" id="clearSearchBtn" style="display: none;"><i class="fas fa-times"></i></button>
          </div>
          <div class="filter-group">
            <button class="filter-btn <%= !status || status==='all' ? 'active' : '' %>" onclick="window.location.href='?status=all'">
              <i class="fas fa-list"></i> All
            </button>
            <button class="filter-btn <%= status==='active' ? 'active' : '' %>" onclick="window.location.href='?status=active'">
              <i class="fas fa-check-circle"></i> Active
            </button>
            <button class="filter-btn <%= status==='blocked' ? 'active' : '' %>" onclick="window.location.href='?status=blocked'">
              <i class="fas fa-ban"></i> Blocked
            </button>
          </div>
        </div>
        <div class="table-responsive">
          <div class="table-header mb-0">
            <div>Customer Name</div>
            <div>Phone</div>
            <div>Orders</div>
            <div>Balance</div>
            <div>Status</div>
            <div>Block/Unblock</div>
            <div>Action</div>
          </div>
          <% if (data && data.length > 0) { %>
            <% data.forEach(customer => { %>
              <div class="customer-row">
                <div class="customer-info">
                  <div class="customer-avatar"><%= customer.fullName ? customer.fullName.charAt(0).toUpperCase() : 'U' %></div>
                  <div class="customer-details">
                    <h4><%= customer.fullName || 'N/A' %></h4>
                    <p><%= customer.email || 'N/A' %></p>
                  </div>
                </div>
                <div><%= customer.mobile || 'N/A' %></div>
                <div>42</div>
                <div>$350.00</div>
                <div>
                  <span class="status-badge <%= customer.isBlocked ? 'status-blocked' : 'status-active' %>">
                    <%= customer.isBlocked ? 'Blocked' : 'Active' %>
                  </span>
                </div>
                <div>
                  <button class="slide-toggle <%= customer.isBlocked ? 'active' : '' %>"
                    aria-label="Toggle Block"
                    onclick="toggleBlockButton(this, '<%= customer._id %>', <%= !!customer.isBlocked %>);">
                    <div class="toggle-bg"></div>
                    <div class="toggle-knob"></div>
                    <span class="toggle-label-on">BLOCK</span>
                    <span class="toggle-label-off">UNBLOCK</span>
                  </button>
                </div>
                <div class="action-icons">
                  <button class="icon-btn view"
                    onclick="window.location.href='/admin/customerDetails/<%= customer._id %>'"
                    title="View">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
            <% }) %>
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center py-3 px-3 bg-white mb-2" style="border-radius:0 0 12px 12px;">
              <div>
                Showing <%= (currentPage - 1) * perPage + 1 %> - <%= Math.min(currentPage * perPage, totalCustomers) %> from <%= totalCustomers %>
              </div>
              <nav>
                <ul class="pagination mb-0">
                  <% if (currentPage > 1) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= status ? '&status=' + status : '' %>">&lt;</a>
                    </li>
                  <% } %>
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= status ? '&status=' + status : '' %>"><%= i %></a>
                    </li>
                  <% } %>
                  <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= status ? '&status=' + status : '' %>">&gt;</a>
                    </li>
                  <% } %>
                </ul>
              </nav>
            </div>
          <% } else { %>
            <div style="padding: 40px; text-align: center; color: #999;">
              <i class="fas fa-users" style="font-size: 48px; margin-bottom: 16px; opacity: 0.4;"></i>
              <p>No customers found</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Search box clear button
    const searchInput = document.getElementById('customerSearchInput');
    const clearBtn = document.getElementById('clearSearchBtn');
    if(searchInput) {
      searchInput.addEventListener('input', function() {
        clearBtn.style.display = this.value ? 'flex' : 'none';
      });
      clearBtn.addEventListener('click', function() {
        searchInput.value = '';
        clearBtn.style.display = 'none';
        searchInput.focus();
      });
      if(searchInput.value) clearBtn.style.display = 'flex';
    }
    function toggleBlockButton(btn, userId, isBlockedInitial) {
      btn.classList.toggle('active');
      let willBlock = !isBlockedInitial;
      let action = willBlock ? "block" : "unblock";
      Swal.fire({
        title: `Are you sure you want to ${action} this customer?`,
        icon: willBlock ? "warning" : "success",
        showCancelButton: true,
        confirmButtonText: `Yes, ${action}`,
        cancelButtonText: "Cancel"
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/admin/${action}Customer?id=${userId}`)
            .then(res => res.json())
            .then(data => {
              Swal.fire(
                data.success ? "Success!" : "Error!",
                data.message || "Updated",
                data.success ? "success" : "error"
              ).then(() => location.reload());
            });
        } else {
          btn.classList.toggle('active');
        }
      });
    }
  </script>
</body>
</html>
