<section class="hero">
  <div class="hero-content">
    <h1>Shirts</h1>
    <nav class="hero-nav">
      <a href="#" class="active">Plain</a>
      <a href="#">Stripes</a>
      <a href="#">Checks</a>
      <a href="#">Printed</a>
      <a href="#">Linen</a>
    </nav>
  </div>
</section>

<section class="section">
  <div class="container">
    <h2 class="section-title">New Arrivals</h2>
    <p class="section-subtitle">
      Discover our latest collection of premium shirts crafted with attention to detail.
      From classic styles to contemporary cuts, find your perfect fit.
    </p>

    <div class="product-grid">
      <%
      const newArrivals = [
        { name: 'Shiny Green', price: '$45.00', rating: 5, color: 'Black' },
        { name: 'Shiny Dress', price: '$55.00', rating: 5, color: 'Navy' },
        { name: 'Shiny Dress', price: '$39.00', rating: 4, color: 'Light Purple' },
        { name: 'Shiny Dress', price: '$49.00', rating: 5, color: 'Light Purple' }
      ];
      %>

      <% newArrivals.forEach(function(product) { %>
        <div class="product-card">
          <div class="product-image">
            Product Image - <%= product.color %>
          </div>
          <div class="product-info">
            <h3 class="product-name"><%= product.name %></h3>
            <div class="product-rating">
              <% for (let i = 0; i < product.rating; i++) { %>
                <span class="star">★</span>
              <% } %>
            </div>
            <div class="product-price"><%= product.price %></div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

