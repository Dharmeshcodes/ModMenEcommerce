<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify Email OTP | MODMEN</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body class="bg-light">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-5">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">

        <h4 class="mb-3 text-center fw-bold">Verify Your Email</h4>
        <p class="text-center text-muted mb-4">Enter the 6-digit OTP sent to your new email.</p>

        <div id="otpMessages"></div>

        <div class="mb-3">
          <input type="text" class="form-control" id="otpInput" maxlength="6" placeholder="6-digit OTP">
        </div>

        <button class="btn btn-dark w-100 mb-2" id="verifyBtn">Verify</button>
        <button class="btn btn-outline-secondary w-100" id="resendBtn" disabled>Resend OTP (45s)</button>

      </div>
    </div>
  </div>
</div>

<script>
  const otpInput = document.getElementById("otpInput");
  const verifyBtn = document.getElementById("verifyBtn");
  const resendBtn = document.getElementById("resendBtn");
  const otpMessages = document.getElementById("otpMessages");

  let countdown = 45;
  resendBtn.disabled = true;

  const startResendCountdown = () => {
    resendBtn.disabled = true;
    countdown = 45;
    resendBtn.textContent = `Resend OTP (${countdown}s)`;
    const timer = setInterval(() => {
      countdown--;
      resendBtn.textContent = `Resend OTP (${countdown}s)`;
      if (countdown <= 0) {
        clearInterval(timer);
        resendBtn.textContent = "Resend OTP";
        resendBtn.disabled = false;
      }
    }, 1000);
  };

  startResendCountdown();

  verifyBtn.addEventListener("click", async () => {
    otpMessages.innerHTML = "";
    const otp = otpInput.value.trim();
    if (otp.length !== 6) {
      otpMessages.innerHTML = `<div class="alert alert-danger py-2">Enter a valid 6-digit OTP</div>`;
      return;
    }

    try {
      const res = await fetch("/user/verify-email-otp?_method=PATCH", {
        method: "PATCH",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ otp })
      });
      const data = await res.json();
      if (data.success) {
        otpMessages.innerHTML = `<div class="alert alert-success py-2">${data.message}</div>`;
        setTimeout(() => { window.location.href = "/user/profile"; }, 1500);
      } else {
        otpMessages.innerHTML = `<div class="alert alert-danger py-2">${data.message}</div>`;
      }
    } catch (err) {
      otpMessages.innerHTML = `<div class="alert alert-danger py-2">Something went wrong. Try again.</div>`;
    }
  });

  resendBtn.addEventListener("click", async () => {
    otpMessages.innerHTML = "";
    try {
      const res = await fetch("/user/resend-email-otp");
      const data = await res.json();
      if (data.success) {
        otpMessages.innerHTML = `<div class="alert alert-success py-2">${data.message}</div>`;
        startResendCountdown();
      } else {
        otpMessages.innerHTML = `<div class="alert alert-danger py-2">${data.message}</div>`;
      }
    } catch (err) {
      otpMessages.innerHTML = `<div class="alert alert-danger py-2">Something went wrong. Try again.</div>`;
    }
  });
</script>

</body>
</html>
