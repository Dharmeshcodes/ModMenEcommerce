<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order Details | ModMen</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

  <style>
    :root{
      --dot-size:20px; /* B2 */
      --line-thickness:8px; /* B2 */
    }
    body { background: #f7f8fa; font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; }
    .container-fluid{ padding:28px 36px; }
    .sidebar-group { width: 300px; min-width: 300px; margin-top: 20px; }
    .sidebar-profile-capsule { width: 100%; height: 120px; background: #fff; border-radius: 20px; padding: 16px; display: flex; align-items: center; box-shadow: 0 6px 20px rgba(12,32,64,0.06); border: 1px solid #eee; }
    .profile-img { width: 56px; height: 56px; border-radius: 50%; margin-right: 14px; object-fit: cover; background: #000; }
    .sidebar-menu-box { width: 100%; background: #fff; border-radius: 16px; margin-top: 12px; padding: 14px 0; border: 1px solid #eee; box-shadow: 0 6px 16px rgba(12,32,64,0.03); }
    .list-group-item { background: transparent; border: none; font-size: 1rem; padding: 12px 20px; }

    .main-content-section { padding-left: 20px; }
    .main-title { font-size: 1.7rem; font-weight:600; margin-bottom:14px; }

    .main-content-box { width: 100%; max-width: 1100px; background: #fff; border-radius: 14px; padding: 22px; border: 1px solid #eef0f3; box-shadow: 0 12px 40px rgba(12,32,64,0.06); margin-bottom: 40px; }

    /* Product card stronger shadow */
    .product-card {
      background: #fff;
      border-radius: 12px;
      padding: 16px;
      margin-bottom: 18px;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      box-shadow: 0 12px 30px rgba(10,30,60,0.08);
      border: 1.5px solid rgba(0,0,0,0.04);
      position: relative;
      overflow: visible;
    }
    .product-left { display:flex; gap:16px; align-items:flex-start; }
    .product-img { width: 110px; height: 140px; border-radius: 10px; object-fit: cover; border: 1px solid #eee; }
    .product-meta h6 { font-size:1.05rem; margin-bottom:6px; }
    .product-meta .muted { font-size:0.92rem; color:#666; }

    .product-actions { display:flex; flex-direction:column; gap:8px; align-items:flex-end; }

    /* Buttons */
    .btn-cancel { background: #ff4d4f; color: #000; border: none; padding:8px 12px; border-radius:6px; font-weight:600; }
    .btn-cancel:disabled { opacity:0.45; cursor:not-allowed; }
    .btn-track { background: #7ec8ff; color: #fff; border: none; padding:8px 12px; border-radius:6px; font-weight:600; }
    .btn-return { background: #fff; color: #0b5ed7; border: 2px solid #0b5ed7; padding:7px 12px; border-radius:6px; font-weight:600; }

    /* Status badge */
    .status-badge { display:inline-block; padding:6px 10px; border-radius:999px; font-weight:700; font-size:0.85rem; }
    .st-pending { background:#fff4e6; color:#ff9800; border:1px solid #ffcc99; }
    .st-confirmed { background:#e8f2ff; color:#1976d2; border:1px solid #bcdfff; }
    .st-shipped { background:#e8f2ff; color:#1976d2; border:1px solid #bcdfff; }
    .st-out_for_delivery { background:#f3e8ff; color:#6a1b9a; border:1px solid #e6d3f6; }
    .st-delivered { background:#e8f6ea; color:#2e7d32; border:1px solid #cfeed0; }
    .st-cancelled { background:#ffecec; color:#c62828; border:1px solid #ffbdbd; }
    .st-return_requested { background:#fff3e6; color:#ff6f00; border:1px solid #ffd2a8; }
    .st-returned { background:#f6efe6; color:#6d4c41; border:1px solid #e9ddcf; }
    .st-failed { background:#fdecea; color:#7f0000; border:1px solid #f7c9c9; }

    /* Tracker inside product card (bottom full width) */
    .product-tracker-box { width:100%; margin-top:14px; padding:14px; border-radius:10px; background:linear-gradient(180deg,#ffffff,#fbfdff); border:1px solid rgba(0,0,0,0.05); box-shadow: 0 10px 30px rgba(10,30,60,0.06); display:none; }

    /* Timeline layout: labels above line, dots on the line */
    .timeline-outer { width:100%; position:relative; padding-top:18px; }
    .timeline-line { position:absolute; left:2%; right:2%; top: calc(var(--dot-size) / 2 + 8px); height: var(--line-thickness); background:#e6e6e6; border-radius:999px; z-index:1; }
    .timeline-progress { position:absolute; left:2%; top: calc(var(--dot-size) / 2 + 8px); height: var(--line-thickness); background:#4caf50; border-radius:999px; width:0%; z-index:2; transition: width .45s ease; }

    .timeline-steps { position:relative; display:flex; justify-content:space-between; gap:6px; padding:0 6px; z-index:3; }
    .timeline-step { flex:1 1 0; text-align:center; padding:0 6px; }
    .timeline-step .label { display:block; margin-bottom:8px; font-size:0.85rem; color:#333; font-weight:600; }
    .timeline-step .dot { width:var(--dot-size); height:var(--dot-size); border-radius:50%; background:#fff; border:4px solid #ddd; box-sizing:content-box; margin:0 auto; position:relative; top: calc(var(--line-thickness) / -2); z-index:4; }
    .timeline-step.active .dot { border-color:#4caf50; box-shadow:0 6px 18px rgba(76,175,80,0.28); }
    .timeline-step .date { display:block; margin-top:8px; font-size:0.78rem; color:#666; }

    /* Order tracker bigger spacing */
    .order-tracker { margin-top:22px; }

    @media (max-width: 900px) {
      .product-card { flex-direction:column; }
      .product-left{ width:100%; }
      .product-actions { width:100%; display:flex; gap:8px; }
      .timeline-step .label { font-size:0.72rem; }
    }
  </style>
</head>

<body>
  <%- include('../partials/user/header', { user: user }) %>

  <div class="container-fluid">
    <div class="row flex-nowrap">
      <div class="col-lg-3 sidebar-group">
        <div class="sidebar-profile-capsule">
          <img src="<%= user.profileImage || '/images/default-avatar.png' %>" class="profile-img" alt="user">
          <span class="fw-semibold fs-6 text-dark"><%= user.fullName %></span>
        </div>

        <div class="sidebar-menu-box">
          <div class="list-group list-group-flush">
            <a href="/user/profile" class="list-group-item">My Profile</a>
            <a href="/user/address" class="list-group-item">My Address</a>
            <a href="/user/order" class="list-group-item">My Orders</a>
            <a href="/user/wishlist" class="list-group-item">My Wishlist</a>
            <a href="/user/wallet" class="list-group-item">My Wallet</a>
            <a href="/user/coupen" class="list-group-item">My Coupon</a>
            <a href="/user/change-password" class="list-group-item">Change Password</a>
            <a href="/user/logout" class="list-group-item">Logout</a>
          </div>
        </div>
      </div>

      <div class="col-lg-9 main-content-section">
        <div class="main-title">Order Details</div>

        <div class="main-content-box">

          <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
              <div class="fw-bold">Order ID: <%= order.orderId %></div>
              <div class="text-muted">Placed on: <%= (order.invoiceDate ? new Date(order.invoiceDate).toLocaleDateString() : '') %></div>
            </div>
            <div class="text-end">
              <span class="fw-bold">Status: </span>
              <% function statusClass(s){ return 'st-' + s; } %>
              <span class="status-badge <%= statusClass(order.status) %>"><%= order.status.replaceAll('_',' ') %></span>
            </div>
          </div>

          <!-- Products -->
           <%
              const activeItemsCount = items.filter(
                i => !["cancelled", "returned"].includes(i.status)
              ).length;
            %>

          <% items.forEach((item, idx) => { %>
            <div class="product-card" data-item-index="<%= idx %>">

              <div class="product-left">
                <img src="<%= item.image %>" class="product-img" alt="product">
                <div class="product-meta">
                  <h6><%= item.productName %></h6>
                  <div class="muted">₹<%= item.price %> &nbsp; | &nbsp; Qty: <%= item.quantity %></div>
                  <div class="muted">Size: <%= item.size %> &nbsp; | &nbsp; Color: <%= item.color %></div>
                  <div class="mt-2"><span class="status-badge <%= statusClass(item.status) %>"><%= item.status.replaceAll('_',' ') %></span></div>
                </div>
              </div>

              <div class="product-actions">
                <% 
                  const disableItemCancel =
                    ["shipped","out_for_delivery","delivered","returned","return_requested","failed"]
                      .includes(item.status);
                %>

                <% if (activeItemsCount > 1 && !disableItemCancel) { %>
                  <button 
                    class="btn btn-danger cancelBtn"
                    data-order-id="<%= order.orderId %>"
                    data-item-id="<%= item.itemId %>">
                    Cancel
                  </button>
                <% } %>

                <% if (item.status === 'delivered' && activeItemsCount > 1) { %>
                    <button 
                      class="btn btn-sm btn-return return-item-btn"
                      data-order="<%= order.orderId %>"
                      data-item="<%= item.itemId %>">
                      Return Item
                    </button>
                  <% } %>


                <button class="btn btn-sm btn-track track-item-btn" data-item-index="<%= idx %>">Track Item</button>
              </div>

              <!-- product tracker inside card bottom -->
              <div class="product-tracker-box" id="productTracker-<%= idx %>">
                <div class="timeline-outer">
                  <div class="timeline-line"></div>
                  <div class="timeline-progress" id="productProgress-<%= idx %>" style="width:0%"></div>

                  <div class="timeline-steps">
                    <% const statuses = ["pending","confirmed","shipped","out_for_delivery","delivered","cancelled","return_requested","returned","failed"]; %>
                    <% const itemStatusIndex = statuses.indexOf(item.status); %>
                    <% statuses.forEach(function(st, sidx){ %>
                      <div class="timeline-step <%= sidx <= itemStatusIndex ? 'active' : '' %>">
                        <span class="label"><%= st.replaceAll('_',' ') %></span>
                        <div class="dot"></div>
                        <div class="date">
                          <% let dateText='';
                            if(st==='cancelled' && item.cancelledOn) dateText = new Date(item.cancelledOn).toLocaleDateString();
                            else if(st==='delivered' && item.deliveredOn) dateText = new Date(item.deliveredOn).toLocaleDateString();
                            else if(st==='confirmed' && order.invoiceDate) dateText = new Date(order.invoiceDate).toLocaleDateString();
                          %>
                          <%= dateText %>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                </div>
              </div>

            </div>
          <% }); %>

          <!-- Order buttons -->
          <div class="d-flex justify-content-center gap-3 mt-3">
            <% const disableFullCancel = items.some(i => ["shipped","out_for_delivery","delivered","returned","return_requested","failed"].includes(i.status)); %>
            <button class="btn btn-lg btn-cancel cancel-order-btn"
          data-order="<%= order.orderId %>"
          <%= disableFullCancel ? 'disabled' : '' %>>
      Cancel Entire Order
    </button>

            <button class="btn btn-lg btn-track track-order-btn" type="button">Track Order</button>
            <% if (order.status === 'delivered') { %>
  <button class="btn btn-lg btn-return return-order-btn" data-order="<%= order.orderId %>">
    Return Entire Order
  </button>
<% } %>
          </div>
          

          <!-- order-level tracker -->
          <div id="orderTrackingBox" class="product-tracker-box order-tracker" style="display:none;">
            <div class="timeline-outer">
              <div class="timeline-line"></div>
              <div class="timeline-progress" id="orderProgress" style="width:0%"></div>

              <div class="timeline-steps">
                <% const statuses = ["pending","confirmed","shipped","out_for_delivery","delivered","cancelled","return_requested","returned","failed"]; %>
                <% const orderStatusIndex = statuses.indexOf(order.status); %>
                <% statuses.forEach(function(st, sidx){ %>
                  <div class="timeline-step <%= sidx <= orderStatusIndex ? 'active' : '' %>">
                    <span class="label"><%= st.replaceAll('_',' ') %></span>
                    <div class="dot"></div>
                    <div class="date">
                      <% let dateText='';
                         if(st==='cancelled' && order.cancelledOn) dateText = new Date(order.cancelledOn).toLocaleDateString();
                         else if(st==='delivered' && order.deliveredOn) dateText = new Date(order.deliveredOn).toLocaleDateString();
                         else if(st==='confirmed' && order.invoiceDate) dateText = new Date(order.invoiceDate).toLocaleDateString();
                      %>
                      <%= dateText %>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
            <div class="mt-3 text-center text-muted">Expected Delivery: <%= expectedDelivery %></div>
          </div>

          <!-- Order summary -->
          <div class="section-title mt-4">Order Summary</div>
          <div class="info-box" style="background:#fafbff; padding:14px; border-radius:10px; border:1px solid #eef2ff;">
            <div>Subtotal: ₹<%= order.subTotal %></div>
            <div>CGST (9%): ₹<%= cgst %></div>
            <div>SGST (9%): ₹<%= sgst %></div>
            <div>Total GST: ₹<%= gstTotal %></div>
            <div>Discount: ₹<%= order.discountAmount %></div>

            <% if (order.deliveryCharge > 0) { %>
              <div>Delivery Charge: ₹<%= order.deliveryCharge %></div>
            <% } %>

            <div class="fw-bold mt-2">Payable Amount: ₹<%= order.payableAmount %></div>
            <div class="mt-2">Payment Method: <%= order.paymentMethod %></div>
            <div class="fw-bold mt-2">Payable Amount: ₹<%= order.payableAmount %></div>
