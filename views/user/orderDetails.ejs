  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>

     const pageError = "<%= error || '' %>";

  if (pageError === "OUT_OF_STOCK_AFTER_PAYMENT") {
    Swal.fire({
      icon: "warning",
      title: "Order Failed After Payment",
      text: "Payment was successful, but the item went out of stock. Your refund will be processed shortly.",
      confirmButtonText: "OK"
    });
  }

  if (pageError === "OUT_OF_STOCK_BEFORE_PAYMENT") {
    Swal.fire({
      icon: "error",
      title: "Item Out of Stock",
      text: "One or more items went out of stock before payment. Please try again later.",
      confirmButtonText: "OK"
    });
  }
  if (pageError === "PAYMENT_ALREADY_COMPLETED") {
  Swal.fire({
    icon: "info",
    title: "Payment Already Completed",
    text: "This order has already been paid successfully.",
    confirmButtonText: "OK"
  });
}



    const statuses = ["pending","confirmed","shipped","out_for_delivery","delivered","cancelled","return_requested","returned","failed"];
    function computeProgressPercent(index){ if(index <= 0) return 0; const steps = statuses.length - 1; return Math.round((index / steps) * 100); }

    // Initialize order progress
    (function(){
      const orderStatus = "<%= order.status %>";
      const idx = statuses.indexOf(orderStatus);
      const percent = computeProgressPercent(idx);
      const el = document.getElementById('orderProgress'); if(el) el.style.width = percent + '%';
    })();

    // Initialize product progresses
    (function(){
      <% items.forEach(function(item, ii){ %>
        (function(){
          const idx = statuses.indexOf("<%= item.status %>");
          const el = document.getElementById('productProgress-<%= ii %>'); if(el) el.style.width = computeProgressPercent(idx) + '%';
        })();
      <% }); %>
    })();

    // Toggle order tracker
    document.querySelector('.track-order-btn').addEventListener('click', function(){
      const box = document.getElementById('orderTrackingBox');
      box.style.display = (box.style.display === 'none' || box.style.display === '') ? 'block' : 'none';
      if(box.style.display === 'block') box.scrollIntoView({behavior:'smooth', block:'start'});
    });

    // Toggle product tracker
    document.querySelectorAll('.track-item-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const idx = btn.getAttribute('data-item-index');
        const box = document.getElementById('productTracker-' + idx);
        box.style.display = (box.style.display === 'none' || box.style.display === '') ? 'block' : 'none';
        if(box.style.display === 'block') box.scrollIntoView({behavior:'smooth', block:'center'});
      });
    });

    /* Cancel Entire Order */
    document.querySelectorAll('.cancel-order-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const orderId = btn.dataset.order;

        const { value: reason } = await Swal.fire({
          title: "Cancel Order",
          input: "text",
          inputLabel: "Reason for cancellation",
          inputPlaceholder: "Enter reason",
          showCancelButton: true,
          confirmButtonText: "Submit"
        });

        if (!reason) {
          return Swal.fire("Reason Required", "Please enter a reason.", "warning");
        }

        const res = await fetch(`/user/cancel-order/${orderId}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ reason })
        });

        const data = await res.json();

        if (data.success) {
          Swal.fire("Cancelled!", data.message, "success").then(() => location.reload());
        } else {
          Swal.fire("Error!", data.message, "error");
        }
      });
    });

    //singlecancel
document.querySelectorAll('.cancelBtn').forEach(btn => {
    btn.addEventListener('click', async function () {
        const orderId = this.dataset.orderId;
        const itemId  = this.dataset.itemId;

        const { value: reason } = await Swal.fire({
            title: "Cancel Item",
            input: "text",
            inputLabel: "Please enter your cancellation reason",
            inputPlaceholder: "e.g. I changed my mind",
            inputAttributes: { maxlength: "200" },
            showCancelButton: true,
            confirmButtonText: "Submit",
            cancelButtonText: "Close",
            inputValidator: (value) => {
                if (!value) return "Cancellation reason is required!";
            }
        });

        if (!reason) return;

        const response = await fetch(`/user/cancelItem/${orderId}/${itemId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ reason })
        });

        const data = await response.json().catch(() => ({}));

        if (!response.ok) {
            return Swal.fire({
                icon: "error",
                title: "Error",
                text: data.message || "Something went wrong!"
            });
        }

        await Swal.fire({
            icon: "success",
            title: "Item Cancelled",
            text: "Your item has been successfully cancelled."
        });

        location.reload();
    });
});
document.querySelectorAll('.return-item-btn').forEach(btn => {
  btn.addEventListener('click', async function () {

    const orderId = this.dataset.order;
    const itemId  = this.dataset.item;

    const { value: reason } = await Swal.fire({
      title: "Return Item",
      input: "text",
      inputLabel: "Enter reason for return",
      inputPlaceholder: "e.g. Wrong size, damaged product, etc.",
      showCancelButton: true,
      confirmButtonText: "Submit",
      cancelButtonText: "Close",
      inputValidator: (value) => {
        if (!value) return "Return reason is required!";
      }
    });

    if (!reason) return;

    const response = await fetch(`/user/order/${orderId}/return-item/${itemId}`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ reason })
    });

    const data = await response.json().catch(() => ({}));

    if (!response.ok || !data.success) {
      return Swal.fire({
        icon: "warning",
        title: "Action Not Allowed",
        text: data.message || "Item cannot be returned."
      });
    }

    await Swal.fire({
      icon: "success",
      title: "Return Requested",
      text: data.message || "Your return request has been submitted."
    });

    location.reload();
  });
});


document.querySelectorAll('.return-order-btn').forEach(btn => {
  btn.addEventListener('click', async function () {
    const orderId = this.dataset.order;

    const { value: reason } = await Swal.fire({
      title: "Return Entire Order",
      input: "text",
      inputLabel: "Reason for return",
      inputPlaceholder: "e.g. wrong product / damaged / changed mind",
      showCancelButton: true,
      confirmButtonText: "Submit",
      cancelButtonText: "Close",
      inputValidator: (value) => {
        if (!value) return "Return reason is required!";
      }
    });

    if (!reason) return;

    const response = await fetch(`/user/order/${orderId}/return-order`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ reason })
    });

    const data = await response.json().catch(() => ({}));

    if (!response.ok || !data.success) {
      return Swal.fire({
        icon: "error",
        title: "Error",
        text: data.message || "Something went wrong!"
      });
    }

    await Swal.fire({
      icon: "success",
      title: "Return Requested",
      text: "Your full order return request has been submitted."
    });

    location.reload();
  });
});

// Retry Payment Handler
document.getElementById("retryPaymentBtn")?.addEventListener("click", async () => {
  const orderId = document.getElementById("retryPaymentBtn").dataset.orderId;

  const res = await fetch(`/user/retry-payment/${orderId}`, {
    method: "GET",
    headers: { "Content-Type": "application/json" }
  });

  const data = await res.json();

  // Retry Not Allowed
  if (!data.success) {
    return Swal.fire({
      icon: "error",
      title: "Retry Not Allowed",
      text: data.message || "Retry option is not available for this order."
    });
  }

  // Redirect to payment page
  window.location.href = data.redirectURL;
});










  </script>
