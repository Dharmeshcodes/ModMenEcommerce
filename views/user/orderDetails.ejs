<!-- Retry Payment Button (Uses fetch + SweetAlert) -->
<% if (order.paymentStatus === 'failed') { %>
  <div class="mt-3">
    <button 
      class="btn btn-primary px-4 py-2 rounded-pill"
      id="retryPaymentBtn"
      data-order-id="<%= order.orderId %>">
      Retry Payment
    </button>
  </div>
<% } %>

 


          <div class="section-title mt-3">Delivery Address</div>
          <div class="info-box" style="padding:12px; border-radius:8px;"> <%= order.address %> </div>

          <div class="text-center mt-3">
            <a href="/user/order/<%= order.orderId %>/invoice" class="btn btn-dark px-4"> <i class="fa fa-download me-2"></i> Download Invoice </a>
          </div>

        </div>
      </div>
    </div>
  </div>

