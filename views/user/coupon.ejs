<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Coupons | ModMen</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
      

    <style>
        body { background:#fafafa; }

        /* sidebar same as profile page */
        .sidebar-group {
            width: 320px;
            min-width: 320px;
            max-width: 320px;
            min-height: 680px;
            margin-top: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .sidebar-profile-capsule {
            width: 100%;
            height: 130px;
            background: #fff;
            box-shadow: 0 4px 16px rgba(50,50,50,0.09);
            border-radius: 32px;
            padding: 20px 18px 15px 18px;
            display: flex;
            border: 1px solid #f0f0f0;
            margin-bottom: 0;
        }
        .profile-img {
            width:64px;height:64px;
            background:#111;border-radius:50%;
            margin-right:22px;
        }
        .sidebar-menu-box {
            width: 100%;
            background:#fff;
            border-radius: 32px;
            box-shadow: 0 4px 16px rgba(40,40,40,0.08);
            border:1px solid #f0f0f0;
            padding:24px 0 10px 0;
            margin-top:-16px;
        }
        .sidebar-menu-list .list-group-item {
            font-size:1.13rem;
            border:0;
            background:transparent;
            padding:12px 24px;
        }

        /* center section */
        .main-content-section {
            display:flex;
            flex-direction:column;
            align-items:center;
            min-height:820px;
        }

        /* coupon box */
        .coupon-box {
            width: 826px;
            max-width: 98vw;
            background:#fff;
            box-shadow:0 6px 32px rgba(45,45,45,0.11);
            border-radius:38px;
            border:1px solid #e1e1e1;
            padding:40px 50px 40px 50px;
        }

        .coupon-item {
            padding: 14px 0;
        }

        .coupon-item:not(:last-child) {
            border-bottom: 1px solid #ddd;
        }

        .coupon-code {
            font-weight: 600;
            color: #0a8a0a;
            font-size: 1.1rem;
        }

        .coupon-desc {
            font-size: 0.95rem;
            color:#555;
        }

        .expiry-text {
            color:#333;
            font-size:0.9rem;
        }

        @media(max-width:900px) {
            .sidebar-group { width:100%; }
            .coupon-box { width:100%; padding:30px; }
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <%- include('../partials/user/header', {user: user}) %>

    <div class="container-fluid">
        <div class="row flex-nowrap justify-content-start">

            <!-- SIDEBAR -->
            <div class="col-lg-3 col-md-4 sidebar-group">

                <div class="sidebar-profile-capsule d-flex align-items-center">
                    <img src="<%= user.profileImage ? user.profileImage : '/images/default-avatar.png' %>" 
                         class="profile-img">

                    <span class="fw-semibold fs-5 text-dark">
                        <%= user.fullName %>
                    </span>
                </div>

                <div class="sidebar-menu-box">
                    <div class="list-group sidebar-menu-list">
                        <a href="/user/profile" class="list-group-item"><i class="bi bi-person me-3"></i>My Profile</a>
                        <a href="/user/address" class="list-group-item"><i class="bi bi-geo-alt me-3"></i>My Address</a>
                        <a href="/user/order" class="list-group-item"><i class="bi bi-bag-check me-3"></i>My Order</a>
                        <a href="/user/wishlist" class="list-group-item"><i class="bi bi-heart me-3"></i>My Wishlist</a>
                        <a href="/user/wallet" class="list-group-item"><i class="bi bi-wallet2 me-3"></i>My Wallet</a>
                        <a href="/user/coupon" class="list-group-item"><i class="bi bi-ticket me-3"></i>My Coupon</a>
                        <a href="/user/change-password" class="list-group-item"><i class="bi bi-key me-3"></i>Change password</a>
                        <a href="/user/logout" class="list-group-item"><i class="bi bi-box-arrow-right me-3"></i>Log out</a>
                        <a href="/user/referral-code" class="list-group-item"><i class="bi bi-stars me-3"></i>Referral Code</a>
                    </div>
                </div>
            </div>

            <!-- MAIN CONTENT -->
            <div class="col-lg-9 col-md-8 main-content-section">

                <!-- Breadcrumb -->
                <div class="w-100 mb-3 mt-5" style="max-width:826px;">
                    <span class="text-muted">
                        <a href="/user/profile" class="text-muted text-decoration-none">Profile</a> >
                        <a href="/user/coupon" class="text-muted text-decoration-none">Coupons</a>
                    </span>
                </div>

                <!-- COUPON BOX -->
                <div class="coupon-box">

                    <h3 class="text-center mb-4">Available Coupons</h3>

                    <% if (coupons.length === 0) { %>
                        <p class="text-center text-muted">No coupons available right now.</p>
                    <% } %>

                    <% coupons.forEach(c => { %>
                        <div class="coupon-item">

                            <div class="d-flex justify-content-between">
                                <span class="coupon-code"><%= c.code %></span>

                                <span class="expiry-text">
                                    Valid till: <%= new Date(c.expiryDate).toLocaleDateString("en-GB") %>
                                </span>
                            </div>

                            <div class="coupon-desc">
                                <%= c.name %> â€” <%= c.description || "" %>
                            </div>

                        </div>
                    <% }) %>

                </div>

            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <%- include('../partials/user/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
