<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>MODMEN - Sale</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
  <style>
    /* Sale page custom styles */
    /* Modern Search Bar */
.sale-search-box {
  position: relative;
  width: 260px;
  transition: width .3s ease;
}

.sale-search-input {
  width: 100%;
  padding: 8px 40px 8px 40px;
  border-radius: 30px;
  border: 2px solid #ddd;
  font-size: 0.95rem;
  transition: all .2s ease-in-out;
}

.sale-search-input:focus {
  border-color: #000;
  box-shadow: 0 0 6px rgba(0,0,0,0.15);
  outline: none;
}

.search-icon, .close-icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: #666;
  font-size: 1rem;
  cursor: pointer;
}

.search-icon {
  left: 12px;
}

.close-icon {
  right: 12px;
  display: none;
}

    .hero-img-sale {
      width: 100%;
      height: 340px;
      object-fit: cover;
      border-radius: 0 0 16px 16px;
      margin-bottom: 1.8rem;
    }
    #filter-sidebar {
      background: linear-gradient(135deg, #f8f9fa 70%, #e3e3ef 100%);
      border-radius: 10px;
      padding: 1.25rem;
      min-height: 400px;
      margin-bottom: 2rem;
      box-shadow: 0 2px 10px 0 rgba(38,38,38,0.09);
    }
    .filter-title {
      font-weight: bold;
      margin-bottom: 0.25rem;
      font-size: 1.09em;
      letter-spacing: 0.03em;
      color: #2f2f2f;
    }
    .product-card {
      background: #fff;
      border-radius: 0.75rem;
      border: 1px solid #f0f0f0;
      transition: box-shadow 0.2s;
      box-shadow: 0 2px 8px 0 rgba(30,30,30,0.04);
      overflow: hidden;
      position: relative;
      margin-bottom: 36px;
    }
    .product-card:hover {
      box-shadow: 0 8px 25px 0 rgba(60,60,60,0.11);
      border-color: #e3e3e3;
    }
    .product-image-wrapper {
      width: 100%;
      position: relative;
      height: 310px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #f9f9f9;
      overflow: hidden;
    }
    .product-card img {
      max-width: 100%;
      max-height: 250px;
      object-fit: contain;
      margin: 0 auto;
      border-radius: 0.4rem 0.4rem 0 0;
    }
    .offer-badge {
      position: absolute;
      bottom: 16px;
      right: 12px;
      background: #dc3545;
      color: #fff;
      padding: 0.34em 0.7em;
      font-size: 0.95em;
      font-weight: 600;
      border-radius: 0.35em;
      letter-spacing: 0.03em;
      box-shadow: 0 0 4px rgba(0,0,0,0.14);
      z-index: 2;
    }
    .product-title {
      font-size: 1.08rem;
      font-weight: 600;
      margin-bottom: 0.12rem;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
      color: #262626;
    }
    .product-price {
      color: #ed7526;
      font-weight: 600;
      font-size: 1.06rem;
      margin-bottom: 0;
    }
    .sale-strike {
      color: #979797;
      text-decoration: line-through;
      margin-left: 4px;
      font-size: 0.92em;
    }
    .star-rating {
      margin-bottom: 0.08rem;
    }
    .star-rating i {
      color: #ffbb36;
      font-size: 1em;
      margin-right: -2px;
    }
    .pagination {
      justify-content: center;
    }
    .pagination .page-link {
      border: none;
      background: none;
      color: #333;
      transition: color 0.15s;
    }
    .pagination .active .page-link {
      color: #fff;
      background: #101010;
      border-radius: 100px;
      font-weight: 600;
    }
    .apply-btn {
      border-radius: 24px;
      padding: 0.4em 1.2em;
      background: #101010;
      color: #fff;
      font-weight: 500;
      border: none;
      margin-top: 12px;
    }
    .apply-btn:hover {
      background: #333;
      color: #fff;
    }
    .sortbar-btns {
      display: flex;
      gap: 0.55rem;
      margin-left: 0.1rem;
    }
    .sort-btn {
      background: #fff;
      border: 1.7px solid #d5d5d5;
      border-radius: 22px;
      color: #222;
      padding: 0.25rem 1rem;
      font-size: 0.97em;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.14s, color 0.14s;
      outline: none;
      box-shadow: none !important;
      min-width: 92px;
      text-align: center;
    }
    .sort-btn.active {
      background: #101010;
      color: #fff;
      border-color: #101010;
      font-weight: 600;
    }
    .wishlist-heart {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 22px;
  color: #ccc;
  cursor: pointer;
  z-index: 10;
  transition: color .2s ease;
}

.wishlist-heart.active {
  color: red;
}

    @media (max-width: 991.98px) {
      .product-image-wrapper {
        height: 210px;
      }
      .sortbar-btns {
        flex-direction: column;
        gap: 0.2rem;
      }
    }
    @media (max-width: 767.98px) {
      .hero-img-sale {
        height: 180px;
      }
      .product-image-wrapper {
        height: 130px;
      }
      #filter-sidebar {
        min-height: auto;
      }
      .product-title {
        font-size: 1em;
      }
      .sortbar-btns {
        gap: 0.15rem;
      }
    }
  </style>
</head>
<body>
  <!-- Header Include -->
   <%- include('../partials/user/header.ejs',{ user: user }) %>

  <!-- Hero Image Section -->
    <!-- Hero Carousel Section -->
  <section class="container-fluid mb-4">
    <div id="saleHeroCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner rounded-bottom-4">
        <div class="carousel-item active">
          <img src="/user/images/carousel/1.png" class="d-block w-100 hero-img-sale" alt="Sale Image 1">
        </div>
        <div class="carousel-item">
          <img src="/user/images/carousel/2.png" class="d-block w-100 hero-img-sale" alt="Sale Image 2">
        </div>
        <div class="carousel-item">
          <img src="/user/images/carousel/3.png" class="d-block w-100 hero-img-sale" alt="Sale Image 3">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#saleHeroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#saleHeroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>

  <section class="container">
    <div class="row">
      <!-- Filter Sidebar -->
     <!-- Filter Sidebar -->
<div class="col-lg-3 mb-4">
  <div id="filter-sidebar">
    <div class="filter-title mb-3 text-center" style="font-size:1.13em; color:#272b30; letter-spacing:0.04em;">
      Filter
    </div>

    <!-- Category -->
    <div class="mb-4">
      <div class="filter-title">Category</div>
      <% categories.forEach(category => { %>
        <div class="form-check form-check-sm">
          <input class="form-check-input"
                 type="checkbox"
                 name="category"
                 value="<%= category._id %>"
                 <%= selectedCategories?.includes(category._id.toString()) ? 'checked' : '' %>>
          <label class="form-check-label"><%= category.name %></label>
        </div>
      <% }) %>
    </div>

    <!-- Size -->
    <div class="mb-4">
      <div class="filter-title">Size</div>
      <% ['S','M','L','XL','XXL'].forEach(size => { %>
        <div class="form-check form-check-sm">
          <input class="form-check-input"
                 type="checkbox"
                 name="size"
                 value="<%= size %>"
                 <%= selectedSizes?.includes(size) ? 'checked' : '' %>>
          <label class="form-check-label"><%= size %></label>
        </div>
      <% }) %>
    </div>

    <!-- Sleeve -->
    <div class="mb-4">
      <div class="filter-title">Sleeve</div>
      <% ['Full Sleeve', 'Half Sleeve', 'Sleeveless'].forEach(sleeve => { %>
        <div class="form-check form-check-sm">
          <input class="form-check-input"
                 type="checkbox"
                 name="sleeveType"
                 value="<%= sleeve %>"
                 <%= selectedSleeves?.includes(sleeve) ? 'checked' : '' %>>
          <label class="form-check-label"><%= sleeve %></label>
        </div>
      <% }) %>
    </div>

    <!-- Fit -->
    <div>
      <div class="filter-title">Fit</div>
      <% ['Regular Fit', 'Slim Fit', 'Relaxed Fit'].forEach(fit => { %>
        <div class="form-check form-check-sm">
          <input class="form-check-input"
                 type="checkbox"
                 name="fitType"
                 value="<%= fit %>"
                 <%= selectedFits?.includes(fit) ? 'checked' : '' %>>
          <label class="form-check-label"><%= fit %></label>
        </div>
      <% }) %>
    </div>

    <button type="button" class="apply-btn w-100 mt-3" id="applyFilters">Apply</button>
  </div>
</div>


<!-- Right Section -->
<div class="col-lg-9">

  <!-- Search + Sort -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">

    <div class="d-flex align-items-center gap-3">
      <span class="fw-semibold fs-5">Sale Shirts</span>

      <!-- Search -->
      <div class="sale-search-box">
        <i class="fas fa-search search-icon"></i>

        <input type="text"
               id="saleSearchInput"
               class="sale-search-input"
               placeholder="Search shirts..."
               value="<%= search || '' %>">

        <i class="fas fa-times close-icon" id="searchClear"></i>
      </div>
    </div>

    <!-- Sort Buttons -->
    <div class="sortbar-btns">
      <button class="sort-btn <%= sortBy === 'popularity' ? 'active' : '' %>" onclick="applySort('popularity')">Popularity</button>
      <button class="sort-btn <%= sortBy === 'newest' ? 'active' : '' %>" onclick="applySort('newest')">Newest</button>
      <button class="sort-btn <%= sortBy === 'pricelowhigh' ? 'active' : '' %>" onclick="applySort('pricelowhigh')">Low to High</button>
      <button class="sort-btn <%= sortBy === 'pricehighlow' ? 'active' : '' %>" onclick="applySort('pricehighlow')">High to Low</button>
    </div>
  </div>


  <!-- Product Grid -->
  <div class="row g-4">
    <% saleProducts.forEach(product => { %>
      <div class="col-6 col-md-3">
        <div class="product-card">
          <div class="product-image-wrapper">

            <i class="fas fa-heart wishlist-heart <%= (user && Array.isArray(user.wishlist) && user.wishlist.some(id => id.toString() === product._id.toString())) ? 'active' : '' %>"
   data-id="<%= product._id %>"
   onclick="toggleWishlist(this)"></i>




            <img src="<%= product.images?.[0]?.url || '/user/images/no-image.png' %>">

            <% if (product.displayOffer > 0) { %>
              <div class="offer-badge"><%= product.displayOffer %>% OFF</div>
            <% } %>

          </div>

          <div class="p-3 text-center">
            <div class="product-title">
              <a href="/user/product/<%= product._id %>" class="text-decoration-none text-dark">
                <%= product.name %>
              </a>
            </div>

            <div class="product-price">
              ₹<%= product.variants?.[0]?.salePrice.toFixed(2) %>
              <% if (product.variants?.[0]?.variantPrice > product.variants[0].salePrice) { %>
                <span class="sale-strike">₹<%= product.variants[0].variantPrice.toFixed(2) %></span>
              <% } %>
            </div>

            <div class="star-rating mb-1">
              <i class="fas fa-star"></i><i class="fas fa-star"></i>
              <i class="fas fa-star"></i><i class="fas fa-star"></i>
            </div>
          </div>

        </div>
      </div>
    <% }) %>
  </div>


  <!-- Pagination -->
  <nav class="mt-4">
    <ul class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" href="javascript:void(0)" onclick="goToPage(<%= i %>)"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>

</div>

  </section>
  <!-- Footer Include -->
  <%- include('../partials/user/footer.ejs') %>
  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
/* SEARCH INPUTS */
const searchInput = document.getElementById("saleSearchInput");
const closeIcon = document.getElementById("searchClear");
const searchIcon = document.querySelector(".search-icon");
const applyFiltersBtn = document.getElementById("applyFilters");

/* URL BUILDER */
function buildSaleUrl(extraParams = {}) {
  const params = new URLSearchParams();
  const searchVal = searchInput.value.trim();
  if (searchVal) params.append("search", searchVal);

  document.querySelectorAll("input[name='category']:checked")
    .forEach(cb => params.append("category", cb.value));

  document.querySelectorAll("input[name='size']:checked")
    .forEach(cb => params.append("size", cb.value));

  document.querySelectorAll("input[name='sleeveType']:checked")
    .forEach(cb => params.append("sleeveType", cb.value));

  document.querySelectorAll("input[name='fitType']:checked")
    .forEach(cb => params.append("fitType", cb.value));

  Object.keys(extraParams).forEach(key => {
    params.set(key, extraParams[key]);
  });

  return "/user/sale?" + params.toString();
}

/* SEARCH */
searchInput.addEventListener("input", () => {
  closeIcon.style.display = searchInput.value.trim() ? "block" : "none";
});

searchInput.addEventListener("keydown", (e) => {
  if (e.key === "Enter") {
    e.preventDefault();
    window.location.href = buildSaleUrl();
  }
});

searchIcon.addEventListener("click", () => {
  window.location.href = buildSaleUrl();
});

closeIcon.addEventListener("click", () => {
  searchInput.value = "";
  closeIcon.style.display = "none";
  window.location.href = buildSaleUrl();
});

/* FILTER APPLY */
if (applyFiltersBtn) {
  applyFiltersBtn.addEventListener("click", () => {
    window.location.href = buildSaleUrl();
  });
}

/* SORT */
function applySort(option) {
  window.location.href = buildSaleUrl({ sortBy: option });
}

/* PAGINATION */
function goToPage(page) {
  window.location.href = buildSaleUrl({ page });
}

/* WISHLIST */
    async function toggleWishlist(el) {
  const productId = el.dataset.id;
  if (!productId) return;

  try {
    const res = await fetch('/user/wishlist/toggle', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId })
    });

    const data = await res.json();

    if (!data || !data.success) {
      Swal.fire({ icon: 'warning', title: data?.message || 'Operation failed', showConfirmButton: false, timer: 1200 });
      return;
    }

    if (data.action === 'added') {
      el.classList.add('active');
      Swal.fire({ icon: 'success', title: 'Added to wishlist', showConfirmButton: false, timer: 900 });
    } else {
      el.classList.remove('active');
      Swal.fire({ icon: 'info', title: 'Removed from wishlist', showConfirmButton: false, timer: 900 });
    }
  } catch (err) {
    console.error('Wishlist toggle error', err);
    Swal.fire({ icon: 'error', title: 'Server error', showConfirmButton: false, timer: 1400 });
  }
}
</script>

</body>
</html>
