<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contact Us | MODMEN</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: #f8f9fa;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial;
    }

    .breadcrumb-box {
      background: #fff;
      padding: 14px 24px;
      border-bottom: 1px solid #eee;
    }

    .contact-wrapper {
      background: #fff;
      border-radius: 14px;
      padding: 32px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.06);
    }

    .contact-left {
      border-right: 1px solid #eee;
    }

    .contact-card {
      display: flex;
      gap: 14px;
      margin-bottom: 26px;
    }

    .contact-icon {
      width: 44px;
      height: 44px;
      background: #000;
      color: #fff;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
    }

    .contact-card h6 {
      font-weight: 600;
      margin-bottom: 4px;
    }

    .contact-form input,
    .contact-form textarea {
      border-radius: 8px;
      padding: 12px;
      border: 1px solid #ddd;
    }

    .contact-form textarea {
      resize: none;
    }

    .btn-send {
      background: #000;
      color: #fff;
      padding: 12px 32px;
      border-radius: 8px;
      border: none;
    }

    .btn-send:hover {
      background: #222;
    }

    @media (max-width: 992px) {
      .contact-left {
        border-right: none;
        border-bottom: 1px solid #eee;
        margin-bottom: 24px;
        padding-bottom: 24px;
      }
    }
  </style>
</head>
<body>

  <!-- HEADER PARTIAL -->
  <%- include('../partials/user/header', { user: user }) %>

  <!-- BREADCRUMB -->
  <div class="breadcrumb-box">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Contact</li>
      </ol>
    </nav>
  </div>

  <!-- CONTACT SECTION -->
  <div class="container my-5">
    <div class="contact-wrapper">
      <div class="row g-4">

        <!-- LEFT INFO -->
        <div class="col-lg-4 contact-left">
          <div class="contact-card">
            <div class="contact-icon">
              <i class="fa fa-phone"></i>
            </div>
            <div>
              <h6>Call To Us</h6>
              <p class="mb-1 text-muted">We are available 24/7, 7 days a week.</p>
              <p class="mb-0 fw-semibold">Phone: +91 88866 11222</p>
            </div>
          </div>

          <hr>

          <div class="contact-card">
            <div class="contact-icon">
              <i class="fa fa-envelope"></i>
            </div>
            <div>
              <h6>Write To Us</h6>
              <p class="mb-1 text-muted">
                Fill out our form and we will contact you within 24 hours.
              </p>
              <p class="mb-0 fw-semibold">customer@modmen.com</p>
              <p class="mb-0 fw-semibold">support@modmen.com</p>
            </div>
          </div>
        </div>

        <!-- RIGHT FORM -->
        <div class="col-lg-8">
          <form class="contact-form">
            <div class="row g-3 mb-3">
              <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Your Name *" required>
              </div>
              <div class="col-md-4">
                <input type="email" class="form-control" placeholder="Your Email *" required>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Your Phone *" required>
              </div>
            </div>

            <div class="mb-4">
              <textarea class="form-control" rows="6" placeholder="Your Message"></textarea>
            </div>

            <div class="text-end">
              <button type="submit" class="btn-send">
                Send Message
              </button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>

  <!-- FOOTER PARTIAL -->
  <%- include('../partials/user/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
