<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>MODMEN - Home</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/user/css/style.css" />
  <style>
    .offer-badge {
      position: absolute;
      bottom: 8px;
      
      right: 8px;
      background: #dc3545;
      color: white;
      padding: 0.25em 0.5em;
      font-size: 0.75rem;
      font-weight: 600;
      border-radius: 0.25rem;
      box-shadow: 0 0 5px rgba(0,0,0,0.3);
      user-select: none;
      z-index: 10;
    }
    .product-image-wrapper {
      position: relative;
      overflow: hidden;
    }
    .card-img-top {
      height: 225px;
      object-fit: cover;
    }
    .carousel-item img {
      max-height: 420px;
      object-fit: cover;
      width: 100%;
    }
  </style>
</head>
<body>
  <%- include('../partials/user/header.ejs',{ user: user }) %>

  <!-- Hero Carousel Section -->
  <section class="container-fluid my-3 px-0">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner rounded shadow">
        <% const carouselImages = ['1.png','2.png','3.png','4.png']; %>
        <% carouselImages.forEach((img, idx) => { %>
          <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
            <img src="/user/images/carousel/<%= img %>" alt="Hero Image <%= idx+1 %>">
            <% if(idx === 0) { %>
              <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold">Shirts</h1>
                <div class="fw-semibold">Plain &nbsp; | &nbsp; Stripes &nbsp; | &nbsp; Checks &nbsp; | &nbsp; Printed</div>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>

  <!-- New Arrivals Section -->
  <section class="container py-4">
    <div class="text-center">
      <h2 class="fw-bold">New Arrivals</h2>
      <p class="text-muted">Discover the latest in men’s fashion—premium shirts with modern style, comfort, and durability only at MODMEN.</p>
    </div>
    <div class="row justify-content-center">
      <% newArrivals.forEach(function(product) { %>
        <div class="col-md-3 col-6 mb-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="product-image-wrapper">
              <img src="<%= product.images && product.images[0] ? product.images[0].url : '/user/images/no-image.png' %>" class="card-img-top" alt="<%= product.name %>">
              <% if (product.displayOffer && product.displayOffer > 0) { %>
                <div class="offer-badge"><%= product.displayOffer %>% OFF</div>
              <% } %>
            </div>
            <div class="card-body text-center">
              <h6 class="card-title fw-semibold mb-1">
                <a href="/user/product/<%= product._id %>" class="text-decoration-none text-dark"><%= product.name %></a>
              </h6>
              <p class="mb-0 text-primary fw-semibold">$<%= product.variants && product.variants[0] ? product.variants[0].salePrice.toFixed(2) : product.price %></p>
              <div class="mb-1">
                <% for(let i=0; i<5; i++) { %>
                  <i class="fas fa-star text-warning"></i>
                <% } %>
              </div>
              <span class="badge bg-warning text-dark small">Almost Sold Out</span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Promotional/Lifestyle Banner Section -->
  <section class="container-fluid my-2 px-0">
    <img src="/user/images/homepage/lifestyle.png" class="w-100 rounded-3 my-2 shadow" alt="Blended Nature" style="max-height:260px; object-fit:cover;">
  </section>


  <!-- Premium Trending Section -->
  <section class="container py-4">
    <div class="text-center">
      <h2 class="fw-bold">Premium Trending</h2>
      <p class="text-muted">Top premium picks trending this season, curated for comfort and elegance by MODMEN.</p>
    </div>
    <div class="row justify-content-center">
      <% premiumTrending.forEach(function(product) { %>
        <div class="col-md-3 col-6 mb-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="product-image-wrapper">
              <img src="<%= product.images && product.images[0] ? product.images[0].url : '/user/images/no-image.png' %>" class="card-img-top" alt="<%= product.name %>">
              <% if (product.displayOffer && product.displayOffer > 0) { %>
                <div class="offer-badge"><%= product.displayOffer %>% OFF</div>
              <% } %>
            </div>
            <div class="card-body text-center">
              <h6 class="card-title fw-semibold mb-1">
                <a href="/user/product/<%= product._id %>" class="text-decoration-none text-dark"><%= product.name %></a>
              </h6>
              <p class="mb-0 text-primary fw-semibold">$<%= product.variants && product.variants[0] ? product.variants[0].salePrice.toFixed(2) : product.price %></p>
              <div class="mb-1">
                <% for(let i=0; i<5; i++) { %>
                  <i class="fas fa-star text-warning"></i>
                <% } %>
              </div>
              <span class="badge bg-success small">Premium</span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    
  </section>
    <!-- Additional Lifestyle Banner (lifestyle2.png) -->
  <section class="container-fluid my-2 px-0">
    <img src="/user/images/homepage/lifestyle2.png" class="w-100 rounded-3 my-2 shadow" alt="New Lifestyle" style="max-height:260px; object-fit:cover;">
  </section>


  <%- include('../partials/user/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
