<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Verify OTP</title>
  <!-- Bootstrap 5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- SweetAlert2 CDN -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .otp-container {
      text-align: center;
      max-width: 400px;
      width: 90%;
      padding: 20px;
    }

    h2 {
      font-size: 1.8rem;
      margin-bottom: 10px;
    }

    p {
      font-size: 0.95rem;
      color: #444;
      margin-bottom: 30px;
    }

    .otp-inputs input.form-control {
      width: 100%;
      height: 55px;
      font-size: 1.5rem;
      text-align: center;
      border-radius: 8px;
      transition: border 0.2s;
    }

    .otp-inputs input.form-control:focus {
      border-color: #000;
      box-shadow: none;
    }

    .timer {
      font-size: 0.9rem;
      margin-bottom: 10px;
    }

    .resend {
      font-size: 0.9rem;
      color: #000;
      margin-bottom: 30px;
    }

    .resend a {
      font-weight: 600;
      text-decoration: none;
      color: #000;
      cursor: pointer;
    }

    .verify-btn {
      background-color: #000;
      color: #fff;
      padding: 12px 30px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      width: 100%;
    }

    .verify-btn:hover {
      background-color: #222;
    }
  </style>
</head>
<body>
  <div class="otp-container">
    <h2>Verify OTP</h2>
    <p>
      We've sent an email with an activation code to your email
      <strong><%= email %></strong>
    </p>

    <form id="otpForm" onsubmit="return validateOtp(event)">
      <div class="otp-inputs mb-3">
        <input
          type="text"
          id="otp"
          name="otp"
          maxlength="6"
          required
          class="form-control"
          autocomplete="off"
          inputmode="numeric"
          pattern="[0-9]*"
        />
      </div>

      <div class="timer">Send code again <span id="countdown">00:30</span></div>
      <div class="resend mb-3">
        I didnâ€™t receive a code <a onclick="resendOtp()">Resend</a>
      </div>

      <button class="verify-btn" type="submit">Verify</button>
    </form>
  </div>

  <script>
    let countdown = 30;
    const countdownElement = document.getElementById('countdown');
    let interval = setInterval(() => {
      countdown--;
      const seconds = countdown < 10 ? '0' + countdown : countdown;
      countdownElement.textContent = `00:${seconds}`;
      if (countdown === 0) clearInterval(interval);
    }, 1000);

    async function validateOtp() {
      event.preventDefault()
      const otp=document.getElementById("otp").value.trim();

       try{
        const response=await fetch("/user/verify-otp",{
          method:'POST',
          headers:{"Content-Type":"application/json"},
          body:JSON.stringify({otp})

        });

         result= await response.json()
          
         if(response.ok && result.success){
          Swal.fire({
            icon:'success',
            title:'Otp verified successfully',
            showConfirmButton:false,
            timer:3000,
          })
          window.location.href=result.redirectUrl || 'user/login'
         }
         else{
          Swal.fire({
            icon:"error",
            title:"Invalid Otp",
            text:result.message ||"please try again "
          })
         }


        }
    
       catch (error){
        Swal.fire({
          icon:'error',
          title:'Server error',
          text:"please try again later catch block in front end"
        })

       }
       return false
    }
        

    async function resendOtp() {
      countdown = 30;
      countdownElement.textContent = '00:30';
      clearInterval(interval); 
      interval = setInterval(() => {
        countdown--;
        const seconds = countdown < 10 ? '0' + countdown : countdown;
        countdownElement.textContent = `00:${seconds}`;
        if (countdown === 0) clearInterval(interval);
      }, 1000);

      try {
        const response = await fetch('/user/resend-otp', { method: 'POST' });
        const result = await response.json();

        if (result.success) {
          Swal.fire({
            icon: 'success',
            title: 'OTP Resent Successfully',
            showConfirmButton: false,
            timer: 3000,
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while resending the OTP.',
          });
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Server Error',
          text: 'Failed to resend OTP. Please try again.',
        });
      }
    }
  </script>
</body>
</html>
