<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="/user/css/style.css">

<header class="header">
  <div class="nav-container">
    <a href="/" class="logo">MODMEN</a>

    <!-- LEFT: Nav Menu -->
    <nav class="nav-menu" id="navMenu">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/shirts">Sale</a></li>
      </ul>
    </nav>

    <!-- CENTER: Search -->
    <div class="search-container">
      <input type="text" class="search-input" placeholder="What are you looking for?">
      <button class="search-btn">
        <i class="fas fa-search"></i>
      </button>
    </div>

    <!-- RIGHT: Auth & User Links -->
    <div class="user-actions">
      <% if (user && user._id) { %>
        <!-- Wishlist -->
        <a href="/user/wishlist" title="Wishlist"><i class="fas fa-heart"></i></a>

        <!-- Cart -->
        <a href="/user/cart" title="Cart"><i class="fas fa-shopping-cart"></i></a>

        <!-- Profile Dropdown -->
        <div class="dropdown">
          <button class="dropbtn">
            <i class="fas fa-user"></i> <%= user.name %>
          </button>
          <div class="dropdown-content">
            <a href="/user/profile"><i class="fas fa-user-circle"></i> Account</a>
            <a href="/user/orders"><i class="fas fa-box"></i> My Orders</a>
            <a href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
        </div>
      <% } else { %>
        <!-- If not logged in -->
        <a href="/user/login" class="btn-link">Sign In</a>
        <a href="/user/signup" class="btn-link">Sign Up</a>
      <% } %>
    </div>

    <!-- Mobile Nav Toggle -->
    <button class="mobile-toggle" id="mobileToggle">
      <i class="fas fa-bars"></i>
    </button>
  </div>
</header>
